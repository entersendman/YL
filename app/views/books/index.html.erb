<p id="notice"><%= notice %></p>
<div class="wrapper">
  <h1 id="welcome_h1">You are welcome on our library</h1>
  
      <div class="container-book_pad">



  
    <% @books.each do |book| %>
     
        <h3><%= book.name %></h3>
        <td><%= book.document_file_name %></td>

        <%= button_to 'Download', download_path(book.id) %>
        <td><%= link_to 'Edit', edit_book_path(book) %>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <hr>
    <% end %>
 

<br>
</div>

<%= link_to 'New Book', new_book_path, :class =>"button" %>
</div>
<%= will_paginate @books %>
